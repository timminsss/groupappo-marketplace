
<div class="d-flex justify-content-between align-items-center mb-3">
  <h1>All your products</h1>
  <%= link_to "Add product", new_product_path, class: "btn btn-primary" %>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">ID</th>
      <th scope="col">Category</th>
      <th scope="col">Product type</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each_with_index do |product, index| %>
      <tr>
        <th scope="row"><%= index + 1 %></th>
        <td><%= product.id %></td>
        <td><%= product.category %></td>
        <td><%= product.product_type %></td>
        <td><%= product.name %></td>
        <td>$<%= product.price %></td>
        <td class="d-flex">
          <%= link_to owner_product_path(product) do %>
            <i class="fa-regular fa-folder-open me-3"></i>
          <% end %>
          <%= link_to edit_product_path(product) do %>
            <i class="fa-solid fa-pen-to-square me-3"></i>
          <% end %>
          <%= link_to product_path(product), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
            <i class="fa-solid fa-trash-can"></i>
          <% end %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>
